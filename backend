-- FyyCommunity Loader (DEBUG)
local HttpService = game:GetService("HttpService")

local API_URL = "https://loretta-metalline-bebe.ngrok-free.dev/validate"

local function validateKey()
    if not _G.script_key then
        error("[Fyy Loader] _G.script_key belum di-set")
    end

    local hwid = game:GetService("RbxAnalyticsService"):GetClientId()
    local player = game.Players.LocalPlayer
    local robloxId = player and player.UserId or 0
    local placeId = game.PlaceId

    local url = string.format(
        "%s?key=%s&hwid=%s&robloxId=%s&placeId=%s",
        API_URL,
        HttpService:UrlEncode(_G.script_key),
        HttpService:UrlEncode(hwid),
        tostring(robloxId),
        tostring(placeId)
    )

    -- HTTP GET aman pakai pcall
    local ok, response = pcall(function()
        return game:HttpGet(url)
    end)

    if not ok or not response or response == "" then
        warn("[Fyy Loader] Gagal HttpGet ke server, response:")
        warn(response)
        error("[Fyy Loader] Tidak bisa menghubungi server validasi.")
        return
    end

    -- DEBUG: lihat raw response
    warn("[Fyy Loader] RAW RESPONSE DARI SERVER:")
    warn(response)

    -- Decode JSON dengan aman
    local okDecode, dataOrErr = pcall(function()
        return HttpService:JSONDecode(response)
    end)

    if not okDecode or not dataOrErr then
        warn("[Fyy Loader] JSONDecode gagal! Response barusan bukan JSON valid.")
        error("[Fyy Loader] Response server tidak valid (cek console).")
        return
    end

    local data = dataOrErr

    if data.status ~= "ok" then
        -- DI SINI KEY SALAH / TIDAK DITEMUKAN / HWID MISMATCH / EXPIRED / DLL
        error("[Fyy Loader] " .. (data.message or "Key error"))
        return
    end

    print("[Fyy Loader] Validation OK:", data.code, data.message)
end

validateKey()

print("[Fyy Loader] Script premium mulai jalan untuk key:", _G.script_key)

-- script utama kamu
loadstring(game:HttpGet("https://raw.githubusercontent.com/fyywannafly-sudo/panel/refs/heads/main/FyyCommunity"))()
