
local HttpService = game:GetService("HttpService")

-- PASTIKAN ini sama persis dengan URL ngrok / server kamu
local API_URL = "https://panel-mount-production.up.railway.app/validate"

local function validateKey()
    if not _G.script_key then
        error("[Fyy Loader] _G.script_key belum di-set")
    end

    local hwid = game:GetService("RbxAnalyticsService"):GetClientId()
    local player = game.Players.LocalPlayer
    local robloxId = player and player.UserId or 0
    local placeId = game.PlaceId

    local url = string.format(
        "%s?key=%s&hwid=%s&robloxId=%s&placeId=%s",
        API_URL,
        HttpService:UrlEncode(_G.script_key),
        HttpService:UrlEncode(hwid),
        tostring(robloxId),
        tostring(placeId)
    )

    -- HttpGet dengan pcall yang bener
    local ok, response = pcall(function()
        return game:HttpGet(url)
    end)

    if not ok or not response or response == "" then
        if player then
            player:Kick("[Fyy Loader] Tidak bisa menghubungi server validasi.")
        end
        return
    end

    -- Decode JSON dengan aman
    local data
    ok, _ = pcall(function()
        data = HttpService:JSONDecode(response)
    end)

    if not ok or not data then
        warn("[Fyy Loader] Response server tidak valid, RAW:")
        warn(response) -- biar kalau temen lu SS console, keliatan isinya apa
        if player then
            player:Kick("[Fyy Loader] Response server tidak valid.")
        end
        return
    end

    -- Kalau status bukan "ok" â†’ kick dengan message dari server
    if data.status ~= "ok" then
        if player then
            player:Kick("[Fyy Loader] " .. (data.message or "Key error"))
        end
        return
    end

    print("[Fyy Loader] Validation OK:", data.code, data.message)
end

validateKey()

print("[Fyy Loader] Script premium mulai jalan untuk key:", _G.script_key)

-- load script utama kamu
loadstring(game:HttpGet("https://raw.githubusercontent.com/fyywannafly-sudo/FyyCommunity/refs/heads/main/MT_LOADER"))()
